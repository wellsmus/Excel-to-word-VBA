Sub CreateParagraphsFromTable()
    Dim tbl As Table
    Dim r As Long, lastRow As Long
    Dim boldText As String, normalText As String
    Dim para As Paragraph
    Dim rng As Range

    ' Assumes first table in the document
    Set tbl = ActiveDocument.Tables(1)
    lastRow = tbl.Rows.Count

    For r = 2 To lastRow ' start after header
        boldText = tbl.Cell(r, 3).Range.Text
        normalText = tbl.Cell(r, 4).Range.Text
        ' Remove end-of-cell markers (Chr(13) & Chr(7))
        boldText = Left(boldText, Len(boldText) - 2)
        normalText = Left(normalText, Len(normalText) - 2)

        Set para = ActiveDocument.Paragraphs.Add
        Set rng = para.Range
        rng.Text = boldText & " "
        rng.Font.Bold = True

        rng.Collapse Direction:=wdCollapseEnd
        rng.InsertAfter """" & normalText & """"
        rng.MoveStart wdCharacter, Len(boldText) + 1
        rng.Font.Bold = False
    Next r
End Sub
